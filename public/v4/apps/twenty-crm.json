{
  "captainVersion": "4",
  "documentation": "https://twenty.com/developers",
  "displayName": "Twenty CRM",
  "description": "Self-hosted open-source CRM platform",
  "instructions": "Deploys Twenty CRM backend + NGINX. Set all env variables in App Config after deploying.",
  "services": [
    {
      "containerHttpPort": "80",
      "image": "nginx:alpine",
      "envVars": [],
      "notExposeAsWebApp": false,
      "volumeMounts": [
        {
          "containerPath": "/etc/nginx/nginx.conf",
          "hostPath": "/captain/data/twenty-nginx.conf"
        },
        {
          "containerPath": "/app/docker-data",
          "hostPath": "/captain/data/twenty-docker-data"
        }
      ]
    },
    {
      "image": "twentycrm/twenty:v0.50.9",
      "envVars": [
        { "key": "STORAGE_TYPE", "value": "" },
        { "key": "STORAGE_LOCAL_PATH", "value": "" },
        { "key": "SERVER_URL", "value": "" },
        { "key": "SIGN_IN_PREFILLED", "value": "" },
        { "key": "APP_SECRET", "value": "" },
        { "key": "PG_DATABASE_URL", "value": "" },
        { "key": "REDIS_URL", "value": "" },
        { "key": "EMAIL_FROM_ADDRESS", "value": "" },
        { "key": "EMAIL_SMTP_HOST", "value": "" },
        { "key": "EMAIL_SMTP_USER", "value": "" },
        { "key": "EMAIL_SMTP_HOST_PASSWORD", "value": "" },
        { "key": "EMAIL_SMTP_PORT", "value": "" },
        { "key": "CALENDAR_PROVIDER_GOOGLE_ENABLED", "value": "" },
        { "key": "AUTH_GOOGLE_CLIENT_ID", "value": "" },
        { "key": "AUTH_GOOGLE_CLIENT_SECRET", "value": "" },
        { "key": "AUTH_GOOGLE_CALLBACK_URL", "value": "" },
        { "key": "AUTH_GOOGLE_APIS_CALLBACK_URL", "value": "" }
      ],
      "volumeMounts": [
        {
          "containerPath": "/app/.local-storage",
          "hostPath": "/captain/data/twenty-local-storage"
        },
        {
          "containerPath": "/app/docker-data",
          "hostPath": "/captain/data/twenty-docker-data"
        }
      ]
    }
  ]
}
