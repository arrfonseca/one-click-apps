{
  "captainVersion": "4",
  "documentation": "https://twenty.com/developers/section/self-hosting/docker-compose",
  "displayName": "Twenty CRM",
  "description": "Self-hosted open-source CRM platform built for teams",
  "instructions": "Make sure to provide a working PostgreSQL and Redis URL. You can update secrets after deployment in App Config.",
  "variables": [
    {
      "id": "app_secret",
      "label": "APP_SECRET",
      "defaultValue": "$$cap_gen_random_hex(32)",
      "description": "Secret key used for app encryption"
    },
    {
      "id": "pg_url",
      "label": "PG_DATABASE_URL",
      "defaultValue": "",
      "description": "PostgreSQL connection string (e.g. postgres://user:pass@host:5432/dbname)"
    },
    {
      "id": "redis_url",
      "label": "REDIS_URL",
      "defaultValue": "",
      "description": "Redis connection string (e.g. redis://:password@host:6379/0)"
    },
    {
      "id": "server_url",
      "label": "SERVER_URL",
      "defaultValue": "https://$$cap_appname.$$cap_root_domain",
      "description": "Public URL of your app"
    }
  ],
  "dockerfileLines": [
    "FROM twentycrm/twenty:v0.50.9"
  ],
  "containerHttpPort": "3000"
}
